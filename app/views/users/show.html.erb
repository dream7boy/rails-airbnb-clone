<div class="profile-container">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <h1>Edit your profile</h1>
        <%= simple_form_for(@user) do |f| %>
          <%= f.input :email %>
          <%= f.input :location %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "Edit", class: "btn btn-success" %>
        <% end %>

        <br>
        <% profile_pic = current_user.facebook_picture_url || current_user.photo %>
        <%= image_tag profile_pic, class: "show-image text-center" %>

      </div>
    </div>
  </div>
</div>
