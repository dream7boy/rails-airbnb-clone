<div class="banner">
  <div class="banner-content text-center">
    <h1>Search for an Exotic Pet</h1>
    <form action="" style="color: black">
      <select id="select" value="Select Species" style="width: 300px"> <!--Supplement an id here instead of using 'name'-->
        <option value="select">Select Species</option>
        <option value="iguana">Iguana</option>
        <option value="hedgehog">Hedgehog</option>
        <option value="owl">Owl</option>
      </select>
      <input type="text" placeholder="Select Date(s)">
      <input type="submit" value="Search" class="btn btn-success btn-lg circular">
    </form>
  </div>
</div>
