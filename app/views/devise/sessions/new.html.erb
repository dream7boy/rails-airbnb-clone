<div class="login-container">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="new-form">
          <h2 class="text-center">Log in</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true, placeholder: 'user@pexotic.com' %>
              <%= f.input :password, required: false, placeholder: '*******' %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "btn btn-success btn-lg btn-green", style: "width: 100%" %>
            </div>
          <% end %>
          <div class="links text-center btn-lg">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
