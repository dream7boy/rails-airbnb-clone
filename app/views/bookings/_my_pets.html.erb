<!-- iterate through all the pets
list each pet, image, name, daily price, etc
link to add a new pet
-->
  <ul>
    <% @user.pets.each do |pet| %>
      <li>
      <div class="product">
        <%= cl_image_tag pet.photo, height: 200, width: 300, crop: :fill, class: "pet-photo" %>
<!--   <img src="kudoz.jpg" alt="kudoz" class="product-image hidden-xs"> -->
          <div class='product-body'>
            <div class="row">
              <div class="col-xs-12 col-sm-3 pet-path">
                <h3><%= link_to pet.name, pet_path(pet) %></h3>
              </div>
            <div class="col-xs-12 col-sm-2 col-sm-offset-1">
              <%= "Daily Rate: Â¥#{pet.daily_price}" %>
            </div>
            <div class="col-xs-12 col-sm-2 col-sm-offset-1 text-center">
              <%= "Available: #{pet.start_date.month}/#{pet.start_date.day}/#{pet.start_date.year} to #{pet.end_date.month}/#{pet.end_date.day}/#{pet.end_date.year}" %>
            </div>
            <div class="col-xs-12 col-sm-2">
              <ul class="list-inline product-controls hidden-sm hidden-xs">
     <!--            <li class="icons"><a href="" title="Cancel booking" data-toggle="tooltip"><i class="fa fa-ban"></i></a></li>
                <li class="icons"><a href="" title="Contact owner" data-toggle="tooltip"><i class="fa fa-envelope-o"></i></a></li> -->
                <li class="booking-status"><a href=""><%= pet.species %></i></a></li>
              </ul>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
